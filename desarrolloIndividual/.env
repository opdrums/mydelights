# Archivo .env para el proyecto "My Delights"

# Puerto donde corre el servidor (puede ser 5000 o cualquier otro)
PORT=5000

# Conexión a la base de datos MongoDB (cambia con tus datos reales)
MONGO_URI=mongodb://localhost:27017/mydelights

# Clave secreta para JWT (si usas autenticación JWT)
JWT_SECRET=mysecrettoken

# Variables de correo (si usas un servicio de envío de correos electrónicos)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USER=your_mailtrap_username
MAIL_PASS=your_mailtrap_password

# Otros servicios que puedas necesitar (ej. API de pagos)
PAYMENT_API_KEY=your_payment_api_key

# Variables de configuración del restaurante (puedes incluir descuentos o valores predeterminados)
DISCOUNT_NEW_CLIENT=2
DISCOUNT_CASUAL_CLIENT=4
DISCOUNT_PERMANENT_CLIENT=6
DELIVERY_FEE=2
